@using MindCabinet.Client.Components.Standard;
@using MindCabinet.Client.Components.Application.Renders;
@using MindCabinet.Client.Components.Application.Pickers;
@using MindCabinet.Client.Services;
@using MindCabinet.Shared.DataObjects;
@using MindCabinet.Shared.DataObjects.Term;



<div component-name="TermEditor"
        class="basic @(this.Disabled ? "disabled" : null) @(this.AddedClasses ?? "")">
    @*<component-label>@this.Label</component-label>*@
    <input type="text"
            disabled=@this.Disabled
            title=@this.Description
            @onfocusin=@(e => this.IsSeachFocused = true)
            @onfocusout=@(e => this.IsSeachFocused = false)
            @onkeydown=@this.OnInputKey_UI_Async
            @bind:event="oninput"
            @bind:get=@this.Value
            @bind:set=@this.OnInputTermOrSearch_UI_Async />
            @* @onchange=@this.SubmitNewTerm_UI_Async /> *@
    <div>
        <div style="position: absolute; display: inline-block;">
            @* @if( (this.IsSeachFocused || (this.SearchResultsElement?.HasFocus ?? false)) && this.SearchOptions.Count() > 0 ) { *@
            @if( this.SearchOptions.Count() > 0 ) {
@* @("terms: "+string.Join(", ", this.SearchOptions.Select(t=>t.Term))) *@
                <MultiTermRender
                        Terms=@this.SearchOptions
                        OnClick_Async=@(async (t, _) => await this.SelectSearchResults_UI_Async(t)) />
            }
       </div>
    </div>
</div>


<RenderPortal TargetRegion="ModalDialogs">
    <Modal @ref=@this.ModalDialogComponent
            ModalId=@("termContextSelectorModal_"+Guid.NewGuid().ToString("N").Substring(0, 8))
            Title="Specify Context">
        <BodyContent>
            <TermSearch OnTermSelect_Async=@this.OnModalDialogTermContextSelect_Async />
        </BodyContent>
    </Modal>
</RenderPortal>


@code {
    private async Task OnModalDialogTermContextSelect_Async( TermObject term ) {
        if( this.InProgressTermEdit is null ) {
            throw new InvalidOperationException( "InProgressTermEdit is null in OnModalDialogTermContextSelect_Async." );
        }

        this.ModalDialogComponent.Close();

        await this.TrySubmitNewTerm_Async( this.InProgressTermEdit, term );

        this.InProgressTermEdit = null;
    }
}