<div component-name="Modal"
        class="modal @this.AddedClasses @this.ModalClass"
        id=@this.ModalId
        tabindex="-1"
        role="dialog"
        @onclick=@this.Close
        style=@this.FullStyles>
    <div class="modal-dialog" role="document" @onclick:stopPropagation=@true>
        <div class="modal-content">
            <div class="modal-header">
                @if( !string.IsNullOrWhiteSpace(this.Title) ) {
                    <h5 class="modal-title">@this.Title</h5>
                }
                @this.HeaderContent
                <button type="button" class="btn-close" @onclick=@this.Close></button>
                @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> *@
            </div>
            <div class="modal-body">
                @this.BodyContent
            </div>
            <div class="modal-footer">
                @this.FooterContent
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
                <button type="button"
                        class="btn btn-secondary"
                        @onclick=@this.Close
                        aria-label="Close">
                        @* data-bs-dismiss="modal" *@
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

@if( this.ShowBackdrop ) {
    @* style="position: fixed;" *@
    <div component-name="ModalBackdrop" class="modal-backdrop fade show" @onclick=@this.Close></div>
}

